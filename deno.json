{
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspace": [
    "apps/client",
    "apps/e2e",
    "apps/loadtest",
    "apps/server",
    "packages/auth/client",
    "packages/auth/server",
    "packages/data",
    "packages/engine",
    "packages/env",
    "packages/logger",
    "packages/math",
    "packages/metrics",
    "packages/pixi",
    "packages/solid-pixi",
    "packages/state",
    "packages/sync/server",
    "packages/sync/client",
    "packages/tiled-loader",
    "packages/tiled-renderer",
    "packages/time"
  ],
  "imports": {
    "solid-js": "npm:solid-js@1.9.1"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "solid-js"
  },
  "tasks": {
    "docker:test": {
      "description": "Start docker in test mode",
      "command": "cd docker && docker compose -f docker-compose.base.yaml -f docker-compose.mp.yaml -f docker-compose.test.yaml up --no-build"
    },
    "docker:dev": {
      "description": "Start docker in development mode",
      "command": "cd docker && docker compose -f docker-compose.base.yaml -f docker-compose.dev.yaml up -d --remove-orphans"
    },
    "dev:client": {
      "description": "Start the client in development mode",
      "command": "cd apps/client && deno task dev"
    },
    "dev:server": {
      "description": "Start the server in development mode",
      "command": "cd apps/server && deno task dev"
    },
    "dev": {
      "command": "deno task dev:client && deno task dev:server",
      "description": "Start client and server in development mode",
      "dependencies": ["dev:client", "dev:server"]
    },
    "build:client": {
      "description": "Build the client for production",
      "command": "cd apps/client && deno task build"
    },
    "build:server": {
      "description": "Build the server for production",
      "command": "cd apps/server && deno task build"
    },
    "build": {
      "command": "deno task build:client && deno task build:server",
      "description": "Build the client and server for production",
      "dependencies": ["build:client", "build:server"]
    }
  },
  "nodeModulesDir": "auto"
}
