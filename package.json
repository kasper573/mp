{
  "name": "mp",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev  --concurrency 99",
    "dev:packages": "pnpm dev --filter=./packages/*",
    "test": "turbo run test",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky",
    "postinstall": "pnpm build:packages"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/js": "^9.7.0",
    "@mp/tsconfig": "workspace:*",
    "@types/eslint__js": "^8.42.3",
    "eslint": "9.7.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-monorepo-cop": "1.0.2",
    "eslint-plugin-solid": "0.14.3",
    "eslint-plugin-unicorn": "^56.0.0",
    "eslint-plugin-unused-imports": "4.0.0",
    "husky": "9.0.11",
    "prettier": "3.3.3",
    "turbo": "2.2.0",
    "typescript-eslint": "8.4.0"
  },
  "engines": {
    "node": "20.10.0"
  },
  "packageManager": "pnpm@9.2.0+sha256.94fab213df221c55b6956b14a2264c21c6203cca9f0b3b95ff2fe9b84b120390"
}
