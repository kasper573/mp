{
  "name": "mp",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --stream build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r --stream test",
    "lint": "oxlint . && ls-lint && manypkg check && knip && eslint . --max-warnings 0",
    "lint:fix": "oxlint . --fix --fix-suggestions --fix-dangerously && manypkg fix && eslint . --fix",
    "eslint": "",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "postinstall": "pnpm -F game build"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "1.31.3",
    "@ls-lint/ls-lint": "2.3.0",
    "@manypkg/cli": "^0.24.0",
    "@mp/tsconfig": "workspace:*",
    "@mp/eslint": "workspace:*",
    "@types/node": "catalog:",
    "knip": "5.61.3",
    "oxlint": "1.6.0",
    "prettier": "3.3.3",
    "typescript": "catalog:"
  },
  "engines": {
    "node": "22.17.0"
  },
  "packageManager": "pnpm@10.4.0"
}
