{
  "name": "@mp/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/package.ts",
      "import": "./src/package.ts",
      "require": "./src/package.ts"
    }
  },
  "scripts": {
    "build": "tsup && tsc",
    "dev:tsup": "tsup --watch",
    "dev:node": "node --watch --enable-source-maps dist/index.mjs",
    "dev": "concurrently -k -p \"[{name}]\" -n \"tsup,node\" -c \"yellow.bold,cyan.bold\" \"pnpm dev:tsup\" \"pnpm dev:node\"",
    "start": "node --enable-source-maps dist/index.mjs",
    "db:reset": "drizzle-kit generate && drizzle-kit push",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@mp/auth-server": "workspace:*",
    "@mp/env": "workspace:*",
    "@mp/data": "workspace:*",
    "@mp/logger": "workspace:*",
    "@mp/math": "workspace:*",
    "@mp/sync-server": "workspace:*",
    "@mp/state": "workspace:*",
    "@mp/tiled-loader": "workspace:*",
    "@mp/time": "workspace:*",
    "@mp/metrics": "workspace:*",
    "@trpc/server": "11.0.0-rc.593",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "4.19.2",
    "postgres": "^3.4.4",
    "rate-limiter-flexible": "^5.0.3",
    "superjson": "2.2.1",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@mp/tsconfig": "workspace:*",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/yargs": "17.0.33",
    "drizzle-kit": "^0.24.2",
    "concurrently": "9.0.1",
    "tsup": "8.3.5"
  }
}
