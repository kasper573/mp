{
  "name": "@mp/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/package.ts",
      "import": "./src/package.ts",
      "require": "./src/package.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx  --import ./src/otel.ts src/main.ts",
    "watch": "tsx watch src/main.ts",
    "db": "drizzle-kit",
    "dev": "pnpm devenv watch",
    "devenv": "dotenvx run -f ../../docker/.env.dev ../../docker/.env.shared -- pnpm"
  },
  "dependencies": {
    "@mp/auth-server": "workspace:*",
    "@mp/env": "workspace:*",
    "@mp/data": "workspace:*",
    "@mp/std": "workspace:*",
    "@mp/logger": "workspace:*",
    "@mp/math": "workspace:*",
    "@mp/sync": "workspace:*",
    "@mp/state": "workspace:*",
    "@mp/tiled-loader": "workspace:*",
    "@mp/time": "workspace:*",
    "@mp/telemetry": "workspace:*",
    "@trpc/server": "11.0.0-rc.593",
    "import-in-the-middle": "1.12.0",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.38.3",
    "express": "4.19.2",
    "pg": "8.13.1",
    "rate-limiter-flexible": "^5.0.3",
    "superjson": "2.2.1",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@mp/tsconfig": "workspace:*",
    "@types/cors": "2.8.17",
    "@types/pg": "8.11.10",
    "@types/express": "4.17.21",
    "@types/yargs": "17.0.33",
    "drizzle-kit": "0.30.1"
  }
}
