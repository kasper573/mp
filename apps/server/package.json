{
  "name": "@mp/server",
  "version": "0.0.0",
  "private": true,
  "types": "./src/package.ts",
  "exports": {
    ".": {
      "import": "./src/package.ts",
      "require": "./src/package.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "start": "node dist/index.js",
    "dev": "tsx watch --env-file .env src/main.ts --clear-screen=false",
    "db:reset": "drizzle-kit generate && drizzle-kit push",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@mp/logger": "workspace:*",
    "@mp/math": "workspace:*",
    "@mp/network": "workspace:*",
    "@mp/state": "workspace:*",
    "@mp/time": "workspace:*",
    "@mp/tiled-loader": "workspace:*",
    "@mp/transformer": "workspace:*",
    "cors": "2.8.5",
    "drizzle-orm": "^0.33.0",
    "express": "4.19.2",
    "postgres": "^3.4.4",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@mp/build": "workspace:*",
    "@mp/tsconfig": "workspace:*",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/yargs": "17.0.33",
    "drizzle-kit": "^0.24.2"
  }
}
