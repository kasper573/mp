{
  "name": "@mp/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/package.ts",
      "import": "./src/package.ts",
      "require": "./src/package.ts"
    }
  },
  "scripts": {
    "build": "tsx esbuild.ts",
    "dev": "dotenvx run -f ../../docker/.env.dev ../../docker/.env.shared -- tsx esbuild.ts --dev",
    "start": "dotenvx run -f ../../docker/.env.dev ../../docker/.env.shared -- node --enable-source-maps dist",
    "db": "dotenvx run -f ../../docker/.env.dev ../../docker/.env.shared -- drizzle-kit"
  },
  "dependencies": {
    "@mp/auth-server": "workspace:*",
    "@mp/env": "workspace:*",
    "@mp/data": "workspace:*",
    "@mp/logger": "workspace:*",
    "@mp/math": "workspace:*",
    "@mp/sync-server": "workspace:*",
    "@mp/state": "workspace:*",
    "@mp/tiled-loader": "workspace:*",
    "@mp/time": "workspace:*",
    "@mp/telemetry": "workspace:*",
    "@trpc/server": "11.0.0-rc.593",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.38.3",
    "express": "4.19.2",
    "pg": "8.13.1",
    "rate-limiter-flexible": "^5.0.3",
    "superjson": "2.2.1",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@mp/tsconfig": "workspace:*",
    "@types/cors": "2.8.17",
    "@types/pg": "8.11.10",
    "@types/express": "4.17.21",
    "@types/yargs": "17.0.33",
    "esbuild": "0.24.2",
    "@jgoz/esbuild-plugin-typecheck": "4.0.2",
    "drizzle-kit": "0.30.1",
    "concurrently": "9.0.1",
    "builtin-modules": "4.0.0"
  }
}
