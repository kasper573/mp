{
  "name": "@mp/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && tsx esbuild.ts",
    "inspect": "pnpm devenv tsx --inspect src/main.ts",
    "inspect-brk": "pnpm devenv tsx --inspect-brk src/main.ts",
    "dev": "pnpm devenv tsx watch --clear-screen=false src/main.ts",
    "devenv": "NODE_TLS_REJECT_UNAUTHORIZED=0 dotenvx run -f ../../docker/.env.dev ../../docker/.env.shared -- pnpm"
  },
  "dependencies": {
    "@mp/api": "workspace:*",
    "@mp/auth": "workspace:*",
    "@mp/db-client": "workspace:*",
    "@mp/env": "workspace:*",
    "@mp/event-router": "workspace:*",
    "@mp/game": "workspace:*",
    "@mp/ioc": "workspace:*",
    "@mp/logger": "workspace:*",
    "@mp/math": "workspace:*",
    "@mp/rate-limiter": "workspace:*",
    "@mp/std": "workspace:*",
    "@mp/sync": "workspace:*",
    "@mp/telemetry": "workspace:*",
    "@mp/time": "workspace:*",
    "@mp/validate": "workspace:*",
    "@mp/ws": "workspace:*",
    "dotenv": "catalog:"
  },
  "devDependencies": {
    "@mp/tsconfig": "workspace:*",
    "builtin-modules": "catalog:",
    "esbuild": "catalog:",
    "tsx": "catalog:"
  }
}
