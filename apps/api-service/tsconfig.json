{
  "extends": "@mp/tsconfig/node.json",
  "include": [
    "./*",
    "src/**/*",
    "server/integrations",
    "server/modules",
    "server/context.ts",
    "server/main.ts",
    "server/options.ts"
  ],
  "compilerOptions": {
    "module": "Preserve",
    "target": "es2017"
  },
  "grats": {
    "graphqlSchema": "./shared/schema.generated.graphql",
    "tsSchema": "./server/schema.generated.ts",
    "nullableByDefault": false,
    "schemaHeader": "# Generated by Grats. Do not edit manually.",
    "tsSchemaHeader": "// Generated by Grats. Do not edit manually."
  }
}
