{
  "name": "@mp/gateway",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/package.ts",
      "import": "./src/package.ts",
      "require": "./src/package.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsx esbuild.ts",
    "inspect": "pnpm devenv tsx --inspect src/main.ts",
    "inspect-brk": "pnpm devenv tsx --inspect-brk src/main.ts",
    "dev": "pnpm devenv tsx watch --clear-screen=false src/main.ts",
    "devenv": "dotenvx run -f ../../docker/.env.dev ../../docker/.env.shared -- pnpm"
  },
  "dependencies": {
    "@mp/auth": "workspace:*",
    "@mp/db": "workspace:*",
    "@mp/env": "workspace:*",
    "@mp/event-router": "workspace:*",
    "@mp/game": "workspace:*",
    "@mp/ioc": "workspace:*",
    "@mp/logger": "workspace:*",
    "@mp/state": "workspace:*",
    "@mp/std": "workspace:*",
    "@mp/sync": "workspace:*",
    "@mp/telemetry": "workspace:*",
    "@mp/validate": "workspace:*",
    "@mp/ws": "workspace:*",
    "dotenv": "catalog:",
    "express": "catalog:"
  },
  "devDependencies": {
    "@mp/build": "workspace:*",
    "@mp/tsconfig": "workspace:*",
    "@types/express": "catalog:",
    "tsx": "catalog:"
  }
}
