{
  "name": "@mp/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "push": "drizzle-kit push",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "seed": "tsx seed.ts",
    "drop": "tsx drop.ts",
    "reset": "pnpm drop && rm -rf drizzle/* && pnpm generate && pnpm push && pnpm seed",
    "devenv": "dotenvx run -f ../../docker/.env.dev ../../docker/.env.shared -- pnpm"
  },
  "dependencies": {
    "@mp/game-shared": "workspace:*",
    "@mp/logger": "workspace:*",
    "@mp/math": "workspace:*",
    "@mp/oauth": "workspace:*",
    "@mp/std": "workspace:*",
    "drizzle-orm": "0.38.3",
    "pg": "8.13.1"
  },
  "devDependencies": {
    "@mp/tsconfig": "workspace:*",
    "@types/pg": "8.11.10",
    "drizzle-kit": "0.30.1"
  }
}
